<div class="container">
<table class="table table-bordered">
  <thead class="table-success">
    <tr>
      <th scope="col">Complaint ID</th>
      <th scope="col">Flat_NO</th>
      <th scope="col">Customer Contact</th>
      <th scope="col">Description</th>
      <th scope="col">status</th>
      <th scope="col">Assigned To</th>
    </tr>
  </thead>
  <tbody>
    {{#each complaints}}
    <tr>
      <td>{{uuidToNumber uuid}}</td>
      <td>{{flat_no}}</td>
      <td>{{contact}}</td>
      <td>{{desc}}</td>
      <td>{{status}}</td>
      <td>{{assignedToName}}</td>
    </tr>
    {{/each}}

  </tbody>
</table>

<div class="container mt-5 border p-5" style="width:70%">
  <h2> Assign the Complaint to Engineer</h2>
  <br>
  <form method="post" action="/assign">
    <div class="form-group">
      <label>Complaint Number</label>
      <select name="complaintUuid" id="complaintUuid" class="form-control">
        {{complaintsActive}}
        {{#each complaintsActive}}
        <option value={{uuid}}> {{flat_no}} </option>
        {{/each}}
        </select>
    </div>
    <div class="form-group">
      <label>Engineer</label>
      <select name="engineerUuid" id="engineerUuid" class="form-control">
        {{#each engineer}}
        <option value={{uuid}}> {{username}} </option>
        {{/each}}
      </select>
    </div>
    <div class="form-group pb-4">
      <button type="submit" class="btn btn-success btn-block">Assign to Engineer</button>
    </div>
  </form>
</div>
</div>